{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "airbnb",
    "airbnb/hooks",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-native"],
  "rules": {
    // permite escrever jsx em arquivos jsx
    "react/jsx-filename-extension": {
      "extension": [".js", ".jsx", ".ts", ".tsx"]
    },
    // libertade nao necessariamente declarar para usar
    "no-use-before-define": ["error", { "variables": false }],

    // ajustar usando react-navigation
    "react/props-types": [
      "error",
      { "ignore": ["navigation", "navigation.navigate"] }
    ],
    "semi": "off",
    "@typescript-eslint/semi": ["error", "always"]
  }
}
